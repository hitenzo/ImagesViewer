@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row viewOptions">
        <button id="tableView" class="btn btn-default"><span class="glyphicon glyphicon-th" aria-hidden="true"></span> Table</button>
        <button id="listView" class="btn btn-default"><span class="glyphicon glyphicon-th-list" aria-hidden="true"> List</span></button>
    </div>
    <div class="row galleryContainer">
        <h2>Selected images</h2>
